generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id              Int      @id @default(autoincrement())
  title           String
  thumbnail       String
  description     String
  fullDescription String
  images          String   // Storing as JSON string for simplicity in SQLite
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
